---
import CtaCard from "@/components/molecules/cards/CtaCard.astro";
import Profile from "@/components/molecules/common/Profile.astro";
import { ctaLinks } from "@/lib/consts";
---

<div class="grid gap-16" data-profile>
  <Profile />
  <div class="grid lg:grid-cols-3 gap-8">
    {ctaLinks && ctaLinks.map((cta) => <CtaCard data={cta} />)}
  </div>
</div>

<script>
  import gsap from "gsap";

  document.addEventListener("astro:page-load", () => {
    gsap.from("[data-profile]", {
      opacity: 0,
      y: 30,
      duration: 1,
      delay: 0.3,
    });
  });
</script>
