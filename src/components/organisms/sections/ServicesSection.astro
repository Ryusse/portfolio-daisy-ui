---
import Divider from "@/components/atoms/Divider.astro";
import ServiceCard from "@/components/molecules/cards/ServiceCard.astro";
import Layout from "@/layouts/Layout.astro";
import { services } from "@/lib/consts";
---

<Layout tag="section" id="services" class="grid gap-12 section">
  <h3 data-service-subtitle class="text-2xl font-semibold uppercase">I CAN HELP YOU WITH</h3>
  <div>
    {
      services &&
        services.map((service, index) => (
          <div data-service-card>
            <ServiceCard data={service} />
            {index !== services.length - 1 && <Divider class="my-10" />}
          </div>
        ))
    }
  </div>
</Layout>

<script>
  import { fadeUpOnce, fromLeft } from "@/lib/animations";

  document.addEventListener("astro:page-load", () => {
    fromLeft("[data-service-subtitle]");
    fadeUpOnce("[data-service-card]");
  });
</script>
