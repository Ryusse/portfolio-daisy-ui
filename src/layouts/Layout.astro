---
type Props = {
  tag?: any;
  class?: string;
  id?: string;
};

const { tag = "div", class: className = "", id, ...props }: Props = Astro.props;

const Tag = tag;
---

<Tag class:list={["layout", className]} id={id} {...props}>
  <slot />
</Tag>

<style lang="scss" scoped>
  .layout {
    @apply w-full mx-auto px-4 max-w-[1194px];

    @screen md {
      @apply w-[calc(100%-80px)] px-0;
    }

    @screen lg {
      @apply w-[calc(100%-120px)];
    }
  }
</style>
